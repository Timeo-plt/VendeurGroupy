<UserControl x:Class="VendeurGroupy.Views.UserControls.Liste_client"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VendeurGroupy.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="750" Background="AliceBlue">
    <Grid>
        <DataGrid x:Name="Clients" ItemsSource="{Binding Clients}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id_user}" Width="Auto"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Utilisateur.Nom}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Utilisateur.email}" Width="*"/>
                <DataGridTextColumn Header="Téléphone" Binding="{Binding Utilisateur.phone}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
