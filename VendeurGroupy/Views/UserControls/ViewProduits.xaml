<UserControl x:Class="VendeurGroupy.Views.UserControls.ViewProduits"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VendeurGroupy.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Bisque">
    <Grid>
        <ListView>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id_produit}" />
                    <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding description}" />
                    <GridViewColumn Header="Quantité" DisplayMemberBinding="{Binding prix}" />
                    <GridViewColumn Header="Prix" DisplayMemberBinding="{Binding image}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
